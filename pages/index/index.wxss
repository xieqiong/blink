/* pages/classic/classic.wxss */
.container{
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.title-img{
  width: 280rpx;
  height: 180rpx;
  
}
.title-box{
  height: 330rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.content-case-item{
  width: calc(100% - 120rpx);
  display: block;
  padding: 50rpx 60rpx;
  overflow: hidden;
}
.content-case{
  width: 100%;
  height: 450rpx;
  display: block;
}
.content-item-img{
  width: 100%;
  height: 350rpx;
}
.content-item-key{
  font-size: 18px;
  font-weight: 700;
  color: #999;
  float: left;
}
.content-left{
  display: inline-block
}
.content-right{
  display: inline-block;
  float: right;
}
.content-item-title{
  text-align: right;
  font-size:12px;
  line-height:40rpx;
  color: #666;
  padding-right: 20rpx;
}
.content-item-title-sub{
  text-align: right;
  font-size:12px;
  color: #666;
  padding-right: 20rpx;
}
.title-continer{
  margin: 15rpx 0 90rpx 0;
  text-align: center;
}
.first-title{
  font-size: 32px;
  color: #666;
  font-weight: 700;
}
.sub-title{
  font-size: 20px;
  color: #666;
  font-weight: 500;
  margin-top:0;
}
.sub-line{
  width: 40rpx;
  height: 1px;
  border-top: 2px solid red;
  display: inline-block;
  position: absolute;
  margin-top: 20rpx;
  margin-left: -20rpx;
}
.navigator-hover {
  color: red;
}
.sub-nav-container{
  display: flex;
  width:100%;
  padding: 0 0 10rpx 0;
}
.navi{
  width: 25%;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #333;
}
.navi-active{
  color: #ED5050;
}