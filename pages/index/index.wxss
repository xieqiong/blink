/* pages/classic/classic.wxss */
.container{
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.title-img{
  width: 280rpx;
  height: 180rpx;
  
}
.title-box{
  height: 330rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.content-case-item{
  width: calc(100% - 120rpx);
  display: block;
  padding: 30rpx 60rpx 80rpx;
  overflow: hidden;
}
.content-case{
  width: 100%;
  height: 510rpx;
  display: block;
}
.content-item-img{
  width: 100%;
  height: 350rpx;
}
.content-item-key{
  font-size: 20px;
  font-weight: 600;
  color: #808080;
  float: left;
  margin-top: 10rpx;
}
.content-left{
  display: inline-block;
}
.content-right{
  display: inline-block;
  float: right;
  color: #999;
}
.content-item-title{
  text-align: right;
  font-size:12px;
  line-height:40rpx;
  color: #b4b4b4;
  padding-right: 20rpx;
  margin-top:10rpx;
  font-weight: 700;
}
.content-item-title-sub{
  text-align: right;
  font-size:7px;
  color: #b4b4b4;
  padding-right: 20rpx;
}
.title-continer{
  margin: 15rpx 0 90rpx 0;
  text-align: center;
}
.first-title{
  font-size: 32px;
  color: #b4b4b4;
  font-weight: bold;
}
.sub-title{
  font-size: 20px;
  color: #b4b4b4;
  font-weight: 800;
  top:44px;
  left:calc(50% - 20px);
  position: absolute;
}
.sub-line{
  width: 40rpx;
  height: 1px;
  border-top: 2px solid #cf0000;
  display: inline-block;
  position: absolute;
  margin-top: 70rpx;
  margin-left: -20rpx;
}
.navigator-hover {
  color: #cf0000;
}
.sub-nav-container{
  display: flex;
  width:100%;
  padding: 20rpx 0 0 0;
}
.navi{
  width: 25%;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #808080;
}
.navi-active{
  color: #cf0000;
}