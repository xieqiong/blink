.navicate-text{
  font-size: 13px;
  line-height: 45rpx;
  padding: 10rpx 0;
}
.kind-list-item {
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
  border-bottom: 1px solid #c0c0c0;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
  font-size: 14px;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-item-hd {
  padding: 25rpx 0;
  display: flex;
  align-items: center;

  transition: opacity .3s;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
}
.index-hd {
  padding: 80rpx;
  text-align: center;
}
