.container{
  width:100%;
  display:flex;
  flex-direction: column;
}
.container-join-tbox{
  width:100%;
  height: 600rpx;
  background: #f0f0f0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center
}
.join-enlish{
  line-height: 80rpx;
  font-size: 30px;
  text-align: center;
  color: #c0c0c0;
  margin: 80rpx 0 5rpx 0;
  font-weight: 700;
}
.join-chinese{
  font-size: 19px;
  text-align: center;
  color: #999;
}
.join-line{
  width: 70rpx;
  height: 5px;
  border-bottom: 2px solid red;
}
.join-summary{
  text-align: center;
  margin-top: 50rpx;
  line-height: 20px;
  font-size: 12px;
  padding: 5rpx 40rpx;
}
.index{
  text-align: left;
}
.index-bd {
  padding: 30rpx 40rpx;
}
.index-block-tile{
  color:#666;
  font-size: 18px;
}
.index-ft {
  padding-bottom: 20rpx;
  text-align: center;
}
.index-logo {
  width: 86rpx;
  height: 86rpx;
}
.index-desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}


