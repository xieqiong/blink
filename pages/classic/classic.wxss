/* pages/classic/classic.wxss */
.container{
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.title-img{
  width: 100%;
  height: 300rpx;
  border-bottom: 1px solid #eee;
}
.content-case{
  width: 100%;
  height: 450rpx;
}
.content-item-img{
  width: 100%;
  height: 350rpx;
}
.content-item-title{
  text-align: right;
  font-size:16px;
  color: #666;
  padding-right: 20rpx;
}
.content-item-title-sub{
  text-align: right;
  font-size:12px;
  color: #666;
  padding-right: 20rpx;
}
.title-continer{
  padding: 15rpx 0;
  text-align: center;
}
.first-title{
  font-size: 40px;
  color: #999;
  font-weight: 700;
}
.sub-title{
  font-size: 25px;
  color: #999;
  font-weight: 500;
}
.sub-line{
  width: 40rpx;
  height: 1px;
  border-top: 2px solid red;
  display: inline-block
}
.navigator-hover {
  color: red;
}
.sub-nav-container{
  display: flex;
  width:100%;
  padding: 0 5rpx 10rpx 5rpx;
}
.navi{
  width: 25%;
  text-align: center;
}