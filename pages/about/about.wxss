/* pages/about/about.wxss */
.container{
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.image-header{
  width: 100%;
  height: 420rpx;
}
.image-header image{
  width: 100%;
  height: 420rpx;
}
.about-description{
  line-height: 30px;
  font-size: 12pt;
  padding: 70rpx 60rpx;
}
.bk{
  width: 100%;
  height: 4400rpx;
}
.service-container{
  width:100%;
  background: rgb(240,240,240);
  min-height: 200rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center
}
.customer-container{
  width:100%;
  min-height: 200rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center
}
.service-title{
  font-size: 25px;
  color: #999;
  font-weight: 700;
}
.service-title-sub{
  font-size: 19px;
  text-align: center;
  color: #999;
}
.service-title-line{
  width: 70rpx;
  height: 15rpx;
  border-bottom: 2px solid red;
}
.about-item{
  margin-top: 100rpx;
  text-align: center;
}
.about-icon{
  width: 260rpx;
  height: 160rpx;
}
.about-icon-title{
  margin-top: 15rpx;
  font-size: 18px;
  color: #666;
  line-height: 30rpx;
}
.customer-box{
  min-height: 200rpx;
  width: 100%;
  padding: 80rpx 60rpx;
  display: flex;
  flex-wrap: wrap;
}
.customer-box-item{
  width: 33%;
  height: 100rpx;
}
.customer-box-item-img{
  width: 100%;
  height: 100rpx;
}
.team-iamge{
  padding: 40rpx 60rpx;
  width: 100%;
  height: 600rpx;
}